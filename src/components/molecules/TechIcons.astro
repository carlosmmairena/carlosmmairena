---
import Icon from '../atoms/Icon.astro';

interface Props {
	size?: 'sm' | 'md' | 'lg';
	class?: string;
}

const { size = 'md', class: className = '' } = Astro.props;

const technologies = [
	{ name: 'React', icon: 'react', color: 'text-blue-500' },
	{ name: 'Node.js', icon: 'node', color: 'text-green-600' },
	{ name: 'Python', icon: 'python', color: 'text-blue-600' },
	{ name: 'Docker', icon: 'docker', color: 'text-blue-400' },
	{ name: 'Astro', icon: 'astro', color: 'text-white' },
];

const containerClass = `flex space-x-4 ${className}`;
---

<div class={containerClass}>
	{technologies.map(tech => (
		<div 
			class="flex flex-col items-center group cursor-default"
			title={tech.name}
		>
			<div class={`transition-colors duration-200 ${tech.color} group-hover:scale-110 transform transition-transform`}>
				<Icon name={tech.icon} size={size} />
			</div>
			{size === 'lg' && (
				<span class="text-xs text-gray-500 mt-1 opacity-0 group-hover:opacity-100 transition-opacity duration-200">
					{tech.name}
				</span>
			)}
		</div>
	))}
</div>
