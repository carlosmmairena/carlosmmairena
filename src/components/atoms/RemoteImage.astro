---
import { Image } from 'astro:assets';

interface Props {
    src: string;
    alt: string;
    class?: string;
    loading?: 'lazy' | 'eager';
}

const { 
    src, 
    alt,
    class: className = '',
    loading = 'lazy',
    ...props 
} = Astro.props;

export const profileImage = "/images/assets/profile.png";
---

<Image alt={alt} src={src} class={className} loading={loading} height={100} width={100} {...props} />

