---
interface Props {
	href: string;
	variant?: 'nav' | 'button' | 'text';
	isActive?: boolean;
	class?: string;
	external?: boolean;
}

const { 
	href, 
	variant = 'text',
	isActive = false,
	class: className = '',
	external = false,
	...props 
} = Astro.props;

const baseClasses = 'transition-colors duration-200';

const variantClasses = {
	nav: `text-gray-600 hover:text-gray-900 font-medium ${isActive ? 'text-blue-600 font-semibold' : ''}`,
	button: 'inline-flex items-center justify-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700',
	text: 'text-blue-600 hover:text-blue-800 underline',
};

const classes = `${baseClasses} ${variantClasses[variant]} ${className}`;

const linkProps = {
	...props,
	...(external && { target: '_blank', rel: 'noopener noreferrer' })
};
---

<a href={href} class={classes} {...linkProps}>
	<slot />
</a>
