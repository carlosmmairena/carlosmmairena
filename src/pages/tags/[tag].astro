---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {

    const posts =  await getCollection("posts");

    return [
        { params: { tag: "astro" }, props: {posts: posts} },
        { params: { tag: "successes" }, props: {posts: posts} },
        { params: { tag: "community" }, props: {posts: posts} },
        { params: { tag: "blogging" }, props: {posts: posts} },
        { params: { tag: "setbacks" }, props: {posts: posts} },
        { params: { tag: "learning in public" }, props: {posts: posts} },
    ];
}

const { tag } = Astro.params;
const { posts } = Astro.props;

const filteredPosts = posts.filter((post: any) => post.data.tags?.includes(tag));
---
<Layout title={tag} currentPath={tag}>
    <p>Publicaciones etiquetados con {tag}</p>

    <ul>
        {filteredPosts.map((post: any) => <li><a href={post.url}>{post.data.title}</a></li>)}
    </ul>

</Layout>

